<configuration scan="true">
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%t] %-5p [%c] - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.mybatis.spring" level="OFF"/>
    <logger name="java.sql.PreparedStatement" level="DEBUG"/>
    <logger name="net.rubyeye.xmemcached" level="OFF"/>
    <logger name="org.springframework.core" level="DEBUG"/>
    <logger name="org.apache.cxf" level="DEBUG"/>
    <logger name="org.springframework.beans" level="OFF"/>
    <logger name="java.sql.Statement" level="DEBUG"/>
    <logger name="com.google.code" level="OFF"/>
    <logger name="org.quartz.core" level="OFF"/>
    <logger name="org.apache" level="DEBUG"/>
    <logger name="org.springframework.jdbc" level="OFF"/>
    <logger name="org.springframework" level="DEBUG"/>
    <logger name="java.sql.ResultSet" level="INFO"/>
    <logger name="org.study.chifan.web" level="DEBUG"/>
    <logger name="org.mybatis" level="DEBUG"/>
    <logger name="java.sql.Connection" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="Console"/>
    </root>
</configuration>